
  <% if @game.start %>
    <%= render "presentation", object: @game %>

  <% else %>
    <%= render "title" %>
    <%= render "board", object: @board %>
    <%= render "stats", object: @game.hero %>
    <%# Line to debug in prod if problems with the board <%= render "debug", object: @game %>
  
    <%= render "messages", object: @game.messages %>

    <% if @game.over %>
      <%= render "game_over", object: @game %>
    <% elsif @game.choice %>
      <%= render "choices", object: @game %>
    <% else %>
      <%= render "commands", object: @commands %>
    <% end %>
  <% end %>


